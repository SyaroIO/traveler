{
  "name": "traveler",
  "private": true,
  "version": "0.0.1",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --config nodemon.json",
    "test": "node dist",
    "start": "set NODE_ENV=production&&node dist",
    "clean": "rimraf dist",
    "prebuild": "rimraf -g dist/!(frontend)",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "build-frontend": "cd frontend && pnpm build",
    "build-all": "pnpm build && pnpm build-frontend ",
    "lint": "eslint --ext .ts src"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-connect": "^2.1.0",
    "koa-static": "^5.0.0",
    "log4js": "^6.9.1"
  },
  "devDependencies": {
    "@types/koa": "^2.13.7",
    "@types/koa-static": "^4.0.2",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "eslint": "^8.45.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.7"
  }
}